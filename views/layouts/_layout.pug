block variables
	- var htmlClasses = 'no-js vlt-is--homepage-04 vlt-is--header-fullscreen vlt-is--footer-widgetized vlt-is--footer-fixed vlt-is--lowercase-mode'

doctype html
html(lang="en" class=htmlClasses)
	
	head
		block title
			title PerolDesign.

		include ../includes/_head.pug

	body
		.vlt-site-preloader
			.image
				img(src="/img/root/preloader.gif" alt="")

		//- Navbar
		block header
			include ../includes/_header.pug

		.vlt-site-wrapper
			.vlt-site-wrapper__inner
				main.vlt-main
					block content
			
			//- Footer
			block footer
				include ../includes/_footer.pug

		//- Javascripts
		include ../includes/_javascript.pug
		
		//- Page specific javascripts
		block specific-js